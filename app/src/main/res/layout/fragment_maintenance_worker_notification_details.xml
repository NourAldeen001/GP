<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/service_detail_back"
        tools:context=".maintenanceworker.ui.MaintenanceWorkerNotificationDetailsFragment">

        <ImageButton
            android:id="@+id/maintenance_worker_notification_details_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginStart="17dp"
            android:background="@color/white"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/maintenance_worker_notification_details_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="17dp"
            android:text="Notification"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/maintenance_worker_notification_details_Img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="17dp"
            android:src="@mipmap/ic_launcher"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maintenance_worker_notification_details_back_btn" />

        <TextView
            android:id="@+id/maintenance_worker_notification_details_title"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/maintenance_worker_notification_details_Img"
            app:layout_constraintTop_toBottomOf="@+id/maintenance_worker_notification_details_Img" />

        <TextView
            android:id="@+id/maintenance_worker_notification_details_content"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/maintenance_worker_notification_details_title"
            app:layout_constraintTop_toBottomOf="@+id/maintenance_worker_notification_details_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>